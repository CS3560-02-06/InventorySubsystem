<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Controllers.AddProductController">
   <children>
      <MenuBar VBox.vgrow="NEVER">
         <menus>
            <Menu mnemonicParsing="false" text="Overall" />
            <Menu mnemonicParsing="false" text="Add">
               <items>
                  <MenuItem fx:id="addProduct" mnemonicParsing="false" onAction="#SelectAddProduct" text="Add new product" />
                  <MenuItem fx:id="addInventory" mnemonicParsing="false" text="Add new inventory item" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Update">
               <items>
                  <MenuItem fx:id="updateProduct" mnemonicParsing="false" text="Update product information" />
                  <MenuItem fx:id="updateInventory" mnemonicParsing="false" text="Update inventory information" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Remove">
               <items>
                  <MenuItem fx:id="removeProduct" mnemonicParsing="false" text="Remove product" />
                  <MenuItem fx:id="removeInventory" mnemonicParsing="false" text="Remove inventory item" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Search">
               <items>
                  <MenuItem fx:id="searchProduct" mnemonicParsing="false" onAction="#SelectSearchProduct" text="Search product" />
                  <MenuItem fx:id="searchInventory" mnemonicParsing="false" onAction="#SelectSearchInventory" text="Search inventory item" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help" />
         </menus>
      </MenuBar>
      <AnchorPane prefHeight="450.0" prefWidth="600.0">
         <children>
            <TextField layoutX="81.0" layoutY="80.0" />
            <Label layoutX="81.0" layoutY="56.0" text="Product ID *" />
            <Label layoutX="174.0" layoutY="14.0" text="Add a new inventory item">
               <font>
                  <Font size="24.0" />
               </font></Label>
            <Label layoutX="81.0" layoutY="120.0" text="Price *" />
            <Label layoutX="83.0" layoutY="178.0" text="Size *" />
            <Label layoutX="83.0" layoutY="238.0" text="Color  *" />
            <TextField layoutX="81.0" layoutY="143.0" />
            <TextField layoutX="81.0" layoutY="202.0" />
            <TextField layoutX="81.0" layoutY="263.0" />
            <Label layoutX="342.0" layoutY="56.0" text="Amount in stock *" />
            <TextField layoutX="342.0" layoutY="80.0" />
            <Label layoutX="342.0" layoutY="120.0" text="Reciept date" />
            <Label layoutX="343.0" layoutY="178.0" text="Expiration date" />
            <Label layoutX="342.0" layoutY="238.0" text="Location *" />
            <TextField layoutX="344.0" layoutY="143.0" />
            <TextField layoutX="344.0" layoutY="202.0" />
            <TextField layoutX="344.0" layoutY="263.0" />
            <Button fx:id="searchProductButton" layoutX="148.0" layoutY="311.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="96.0" style="-fx-background-color: skyblue;" text="Add" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" layoutX="349.0" layoutY="311.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="96.0" style="-fx-background-color: gray;" text="Cancel" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</VBox>
